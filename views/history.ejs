<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - First Key Finance</title>
  <!-- Include Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
</head>
<style>
  #menu {
    display: none;
  }

  @media (min-width: 768px) {
    #menu {
      display: block;
    }
  }
</style>

<body class="font-sans">

  <div class="min-h-screen flex flex-col md:flex-row">

    <!-- Navigation Pane -->
    <%- include('partials/dashboard-nav') %>
      <!-- Main Content Section -->
      <div class="p-4 mt-16 w-full md:w-3/4">

        <h2 class="text-lg text-dark mb-4">Transaction History <span class="font-bold">

          </span></h2>
        <!-- Row 2 -->
        <div class="mt-6">
          <table class="min-w-full bg-white border border-gray-300 shadow-md rounded-md">
            <thead>
              <tr>
                <th class="py-2 px-4 text-gray-500">Date</th>
                <th class="py-2 px-4 text-gray-500">Type</th>
                <th class="py-2 px-4 text-gray-500">Amount</th>
                <th class="py-2 px-4 text-gray-500">Status</th>
                <!-- <th class="py-2 px-4 text-gray-500">Recipient Acc No.</th> -->
                <th class="py-2 px-4 text-gray-500">Sender/Recipient.</th>
              </tr>
            </thead>
            <tbody>
              <!-- Placeholder Transaction Rows -->
              <% transactions.forEach(transaction=> { %>
                <tr>
                  <td class="py-2 px-4 text-center text-gray-500">
                    <%= transaction.createdAt.toISOString().slice(0, 10) %>
                  </td>
                  <td class="py-2 px-4 text-center text-gray-500">
                    <span class="<%= transaction.type === 'Deposit' ? 'badge-green' : 'badge-red' %>">
                      <%= transaction.type %>
                    </span>
                  </td>
                  <td class="py-2 px-4 text-center text-gray-500">
                    $ <%= transaction.amount.toLocaleString() %>.00
                  </td>
                  <td class="py-2 px-4 text-center text-gray-500">
                    <%= transaction.status %>
                  </td>
                  <!-- <td class="py-2 px-4 text-center text-gray-500">
              <%= transaction.accNumber %>
            </td> -->
                  <td class="py-2 px-4 text-center text-gray-500">
                    <%= transaction.recipientName %>
                  </td>
                </tr>
                <% }); %>
            </tbody>
          </table>
        </div>
      </div>

  </div>
</body>
<script>
  function logout() {
    window.location.href = "/logout"; // Redirect to the logout route when clicked
  }
  // JavaScript for toggling the menu
  document.getElementById('menu-toggle').addEventListener('click', function () {
    var menu = document.getElementById('menu');
    menu.classList.toggle('hidden');
  });

</script>

</html>