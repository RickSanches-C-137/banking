<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - First Key Finance</title>
  <!-- Include Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
</head>
<style>
  #menu {
    display: none;
  }

  @media (min-width: 768px) {
    #menu {
      display: block;
    }
  }
</style>

<body class="font-sans bg-gray-100">

  <div class="min-h-screen flex flex-col md:flex-row">

    <!-- Navigation Pane -->
    <%- include('partials/dashboard-nav') %>
      <!-- Main Content Section -->
      <div class="p-4 w-full mt-16 md:w-2/3">
        <% if (message) { %>
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
            <span class="block sm:inline">
              <%= message %>
            </span>
          </div>
          <% } %>
            <div class="flex flex-col md:flex-row items-center justify-center">

              <!-- Form Section -->
              <div class="w-full md:w-3/4 p-4 mb-4 md:mb-0">
                <div class="bg-white p-8 shadow-md">
                  <h2 class="text-2xl font-semibold mb-4">Funds Transfer</h2>

                  <!-- Radio Buttons -->
                  <div class="mb-7 my-5">
                    <input type="radio" id="domestic" name="transferType" value="domestic" checked>
                    <label for="domestic" class="text-md font-semibold text-gray-700">Domestic</label>

                    <input type="radio" id="international" name="transferType" value="international">
                    <label for="international" class="text-md font-semibold text-gray-700">International</label>
                  </div>

                  <!-- Domestic Transfer Form -->
                  <form action="/fund-transfer" id="domesticForm" class="max-w-lg mx-auto" method="post" action="">

                    <!-- Use grid for placing inputs side by side -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                      <div>
                        <label for="desc" class="block text-gray-600 text-sm font-semibold mb-2">Routing Number</label>
                        <input type="text" id="desc" name="desc" class="w-full p-2 border-b border-gray-300 rounded">
                      </div>
                      <div>
                        <label for="accNumber" class="block text-gray-600 text-sm font-semibold mb-2">Recipient account
                          number</label>
                        <input type="text" id="accNumber" name="accNumber"
                          class="w-full p-2 border-b border-gray-300 rounded">
                      </div>
                    </div>

                    <!-- More inputs side by side -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                      <div>
                        <label for="" class="block text-gray-600 text-sm font-semibold mb-2">Verify recipient account
                          number</label>
                        <input type="text" id="" name="" class="w-full p-2 border-b border-gray-300 rounded">
                      </div>
                      <div>
                        <label for="recipientName" class="block text-gray-600 text-sm font-semibold mb-2">Recipient
                          Name</label>
                        <input type="text" id="recipientName" name="recipientName"
                          class="w-full p-2 border-b border-gray-300 rounded">
                      </div>
                    </div>

                    <div class="mb-4">
                      <label for="recipientBank" class="block text-gray-600 text-sm font-semibold mb-2">Name of
                        Beneficiary Bank</label>
                      <input type="text" id="recipientBank" name="recipientBank"
                        class="w-full p-2 border-b border-gray-300 rounded">
                    </div>

                    <div class="mb-4">
                      <label for="amount" class="block text-gray-600 text-sm font-semibold mb-2">Amount</label>
                      <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-2 text-gray-600">$</span>
                        <input type="number" id="amount" name="amount" placeholder="0.00"
                          class="pl-8 w-full p-2 border-b border-gray-300 rounded">
                      </div>
                    </div>
                    <p class="text-white p-1 border border-red-400 border-rounded bg-red-400">Confirm beneficiary
                      details
                      before
                      proceeding</p>

                    <button type="submit" class="bg-green-500 text-white px-4 py-2 mt-3">Send</button>
                  </form>

                  <!-- International Transfer Form -->
                  <form id="internationalForm" class="max-w-lg mx-auto" method="post" action="" style="display: none;">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                      <div>
                        <label for="desc" class="block text-gray-600 text-sm font-semibold mb-2">Routing Number</label>
                        <input type="text" id="desc" name="desc" class="w-full p-2 border-b border-gray-300 rounded">
                      </div>
                      <div>
                        <label for="accNumber" class="block text-gray-600 text-sm font-semibold mb-2">Recipient account
                          number</label>
                        <input type="text" id="accNumber" name="accNumber"
                          class="w-full p-2 border-b border-gray-300 rounded">
                      </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                      <div>
                        <label for="" class="block text-gray-600 text-sm font-semibold mb-2">Verify recipient account
                          number</label>
                        <input type="text" id="" name="" class="w-full p-2 border-b border-gray-300 rounded">
                      </div>
                      <div>
                        <label for="recipientName" class="block text-gray-600 text-sm font-semibold mb-2">Recipient
                          Name</label>
                        <input type="text" id="recipientName" name="recipientName"
                          class="w-full p-2 border-b border-gray-300 rounded">
                      </div>
                    </div>

                    <div class="mb-4">
                      <label for="recipientBank" class="block text-gray-600 text-sm font-semibold mb-2">Name of
                        Beneficiary Bank</label>
                      <input type="text" id="recipientBank" name="recipientBank"
                        class="w-full p-2 border-b border-gray-300 rounded">
                    </div>

                    <div class="mb-4">
                      <label for="swiftCode" class="block text-gray-600 text-sm font-semibold mb-2">Swift Code</label>
                      <input type="text" id="swiftCode" name="swiftCode"
                        class="w-full p-2 border border-gray-300 rounded">
                    </div>

                    <div class="mb-4">
                      <label for="amount" class="block text-gray-600 text-sm font-semibold mb-2">Amount</label>
                      <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-2 text-gray-600">$</span>
                        <input type="number" id="amount" name="amount" placeholder="0.00"
                          class="pl-8 w-full p-2 border-b border-gray-300 rounded">
                      </div>
                    </div>

                    <button type="submit" class="bg-green-500 text-white px-4 py-2">Send</button>
                  </form>

                </div>
              </div>
            </div>
      </div>
  </div>
</body>
<script>
  function logout() {
    window.location.href = "/logout"; // Redirect to the logout route when clicked
  }

  // JavaScript for toggling the menu
  document.getElementById('menu-toggle').addEventListener('click', function () {
    var menu = document.getElementById('menu');
    menu.classList.toggle('hidden');
  });
</script>

</html>