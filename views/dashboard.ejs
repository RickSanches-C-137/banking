<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - First Key Finance</title>
  <!-- Include Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
</head>
<style>
  #menu {
    display: none;
  }

  @media (min-width: 768px) {
    #menu {
      display: block;
    }
  }
</style>

<body class="font-sans">

  <div class="min-h-screen flex flex-col md:flex-row">

    <!-- Navigation Pane -->
    <%- include('partials/dashboard-nav') %>
      <!-- Main Content Section -->
      <div class="p-4 mt-20 w-full md:w-3/4">
        <!-- Row 1 -->
        <div class=" grid grid-cols-1 md:grid-cols-2 gap-10 mx-18">
          <!-- First Column (Bigger) -->
          <div class="md:col-span-1">

            <div class="p-10 bg-gray-900 my-7 w-full shadow-md rounded-md">
              <!-- Balances Section -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Placeholder for Balance Section -->
                <div class="bg-blue-100 p-2 rounded-md">
                  <h3 class="text-lg font-semibold mb-2">Available Balance</h3>
                  <p class="text-xl font-bold">$ <%= user.available.toLocaleString() %>.00</p>
                </div>
                <!-- <div class="bg-green-100 p-4 rounded-md">
                <h3 class="text-lg font-semibold mb-2">Savings Balance</h3>
                <p class="text-xl font-bold">$ <%= user.savings.toLocaleString() %>.00</p>
              </div> -->
                <div class="bg-yellow-100 p-2 rounded-md">
                  <h3 class="text-lg font-semibold mb-2">Fixed Deposit Bal.</h3>
                  <p class="text-xl font-bold">$ <%= user.fixed.toLocaleString() %>.00</p>
                </div>
              </div>
            </div>
          </div>
          <!-- Second Column -->
          <div class="md:col-span-1">
            <div
              class="max-w-md bg-gradient-to-r from-green-400 to-green-600 text-white rounded-md overflow-hidden shadow-lg">
              <div class="p-8">
                <h2 class="text-xl font-semibold mb-2">Debit Card</h2>
                <div class="flex justify-between mb-4">
                  <div>
                    <p class="text-sm text-gray-200">Bank Name</p>
                    <p class="font-semibold">First Key Finance</p>
                  </div>
                  <div>
                    <p class="text-sm text-gray-200">Card Number</p>
                    <p class="font-semibold">**** **** **** 5738</p>
                  </div>
                </div>
                <div class="flex justify-between mb-4">
                  <div>
                    <p class="text-sm text-gray-200">Expiry Date</p>
                    <p class="font-semibold">12/28</p>
                  </div>
                  <div>
                    <p class="text-sm text-gray-200">Holder Name</p>
                    <p class="font-semibold">
                      <%= user.firstName %>
                        <%= user.lastName %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>

        <!-- Row 2 -->


      </div>

  </div>
</body>
<script>
  function logout() {
    window.location.href = "/logout"; // Redirect to the logout route when clicked
  }
  // JavaScript for toggling the menu
  document.getElementById('menu-toggle').addEventListener('click', function () {
    var menu = document.getElementById('menu');
    menu.classList.toggle('hidden');
  });

</script>

</html>